<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ResizeMAUI.Application.Maui"
             xmlns:converters="clr-namespace:ResizeMAUI.Application.Maui.Converters"
             x:Class="ResizeMAUI.Application.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringToThickness x:Key="StringToThickness"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
